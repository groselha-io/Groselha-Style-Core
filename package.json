{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@chakra-ui/icons": "^1.0.3",
    "@chakra-ui/react": "^1.1.5",
    "@chakra-ui/theme-tools": "^1.0.3",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/react": "^6.1.15",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/testing-library__jest-dom": "^5.9.2",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "framer-motion": "^3.2.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-docgen-typescript-plugin": "^0.6.0",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "rollup": "^2.26.5",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "@chakra-ui/icons": "^1.0.3",
    "@chakra-ui/react": "^1.1.5",
    "@chakra-ui/theme-tools": "^1.0.3",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "framer-motion": "^3.2.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "test": "lerna run test --parallel -- --runInBand --logHeapUsage",
    "test:verbose": "lerna run test --parallel -- --runInBand --coverage",
    "comp:compile": "yarn workspace @gsystem/components run compile",
    "comp:compile:watch": "yarn workspace @gsystem/components run compile:dev",
    "comp:test": "yarn workspace @gsystem/components run test",
    "comp:test:watch": "yarn workspace @gsystem/components run test:watch",
    "comp:typecheck": "yarn workspace @gsystem/components run typecheck",
    "comp:typecheck:watch": "yarn workspace @gsystem/components run typecheck:dev",
    "comp:storybook": "yarn workspace @gsystem/components run storybook",
    "comp:storybook:build": "yarn workspace @gsystem/components run storybook:build",
    "ds:compile": "yarn workspace @gsystem/ds run compile",
    "ds:compile:watch": "yarn workspace @gsystem/ds run compile:dev",
    "ds:test": "yarn workspace @gsystem/ds run test",
    "ds:test:watch": "yarn workspace @gsystem/ds run test:watch",
    "ds:typecheck": "yarn workspace @gsystem/ds run typecheck",
    "ds:typecheck:watch": "yarn workspace @gsystem/ds run typecheck:dev",
    "ds:storybook": "yarn workspace @gsystem/ds run storybook",
    "ds:storybook:build": "yarn workspace @gsystem/ds run storybook:build",
    "release": "lerna publish --yes",
    "clean:packages": "lerna clean -y && rimraf node_modules && echo '' > yarn.lock && yarn install"
  }
}
