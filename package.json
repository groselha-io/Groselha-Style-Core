{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^26.2.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "test": "lerna run test --parallel -- --runInBand --logHeapUsage",
    "test:verbose": "lerna run test --parallel -- --runInBand --coverage",
    "comp:compile": "yarn workspace @gsystem/components run compile",
    "comp:compile:watch": "yarn workspace @gsystem/components run compile:dev",
    "comp:test": "yarn workspace @gsystem/components run test",
    "comp:test:watch": "yarn workspace @gsystem/components run test:watch",
    "storybook": "yarn workspace @gsystem/components run storybook",
    "storybook:build": "yarn workspace @gsystem/components run storybook:build",
    "release": "lerna publish --yes",
    "clean:packages": "lerna clean -y && rimraf node_modules && echo '' > yarn.lock && yarn install"
  }
}
