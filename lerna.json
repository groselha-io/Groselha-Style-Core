{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "feature/monorepo"
      ],
      "message": "chore(release): publish version %s - [SKIP CI]",
      "ignoreChanges": [
        "yarn.lock"
      ],
      "exact": true,
      "noCommitHooks": true,
      "includeMergedTags": true
    },
    "publish": {
      "conventionalCommits": true,
      "yes": true
    }
  }
}
