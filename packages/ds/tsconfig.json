{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": false,
    "pretty": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "types": [
      "react",
      "react-dom",
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "../../node_modules/@types/jest/index.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
