{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "emitDeclarationOnly": true,
    "outDir": "dist/js",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es5",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "./src/**/*.spec.tsx",
    "./src/**/*.stories.tsx",
    ".storybook/**/*",
    "./scripts/**/*",
    "**/setupTests.ts",
    "**/react-app-env.d.ts"
  ]
}
